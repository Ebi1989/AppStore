@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model?.Name

            <span class="badge bg-primary" style="float:right"><small>@Model?.Price</small></span>


        </h4>
        <form id="@Model?.Id" asp-action="AddToCart"
              asp-controller="Cart" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.Path" />
            <span class="card-text p-1">
                @Model?.Description
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>
        </form>
    </div>

</div>